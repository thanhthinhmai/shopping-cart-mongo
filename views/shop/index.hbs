{{!--{{# each products }}--}}
    <div class="row">
      {{# each products }}
         <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
      <div class="caption">
        <h3>{{ this.title }}</h3>
        <p class="description">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ullam temporibus vitae dolorem veniam, rerum minus, cupiditate assumenda ipsa aut eos qui, animi aliquam dolorum blanditiis asperiores neque sit illum recusandae?</p>
        <div class="clearfix">
          <div class="price pull-left">{{ this.price }}</div>
          <a href="/add-to-cart/{{ this._id }}" class="btn btn-danger pull-right" role="button">Add to Cart</a>
        </div>
      </div>
    </div>
  </div>
      {{/each}}
</div>
  {{!--{{/each}}--}}


{{!--END ROW--}}


